{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "watch:tailwind": "postcss public/tailwind.css -o public/global.css --watch",
    "build:tailwind": "cross-env NODE_ENV=production postcss public/tailwind.css -o public/global.css",
    "build": "npm run build:tailwind && rollup -c",
    "start": "sirv public --no-clear --single --host",
    "serve": "serve public -p 80",
    "dev": "concurrently \"rollup -c -w\" \"npm run watch:tailwind\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@tailwindcss/typography": "^0.5.1",
    "autoprefixer": "^10.4.0",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.0.2",
    "prettier": "^2.6.1",
    "prettier-plugin-svelte": "^2.6.0",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-motion": "^0.11.2",
    "tailwindcss": "^3.0.2"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "@xstate/svelte": "^0.2.1",
    "firebase": "^9.6.10",
    "sirv-cli": "^1.0.0",
    "svelte-navigator": "^3.1.5",
    "xstate": "^4.30.6"
  }
}
